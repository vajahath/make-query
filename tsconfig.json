{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"declaration": true,
		"declarationDir": "./",
		"paths": {
			"*": ["node_modules/*", "typings/*"]
		}
	},
	"include": ["src/**/*", "typings/*"]
}
